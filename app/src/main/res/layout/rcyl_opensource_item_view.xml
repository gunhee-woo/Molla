<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/txt_opensource_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textStyle="bold"
        android:text="opensource name"
        android:textColor="@color/colorAspenBrightBlue"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/txt_opensource_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:linksClickable="true"
        android:autoLink="web"
        android:text="web address"
        android:textSize="11dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/txt_opensource_name"
        app:layout_constraintStart_toStartOf="@id/txt_opensource_name"
        />
    <TextView
        android:id="@+id/txt_opensource_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="copyright"
        android:textSize="11dp"
        android:textColor="@color/colorAspenBrightBlue"
        app:layout_constraintStart_toStartOf="@id/txt_opensource_link"
        app:layout_constraintTop_toBottomOf="@id/txt_opensource_link"
        />
    <TextView
        android:id="@+id/txt_opensource_license"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="license"
        android:textSize="11dp"
        android:textColor="@color/colorAspenBrightBlue"
        app:layout_constraintStart_toStartOf="@id/txt_opensource_copyright"
        app:layout_constraintTop_toBottomOf="@id/txt_opensource_copyright"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAspenDarkGray"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/txt_opensource_license"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>